<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.CheckBox?>
<BorderPane prefHeight="800.0" prefWidth="1200.0"
            xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="showmeyourspoon.instrument.SpoonCodeInstrument">
    <top>
        <HBox>
            <CheckBox fx:id="hideImplicit" text="Hide implicit elements" selected="true" />
        </HBox>
    </top>
    <center>
        <SplitPane dividerPositions="0.3">
            <TextArea fx:id="spoonCode" />
            <TreeView fx:id="spoonAST" />
        </SplitPane>
    </center>
</BorderPane>
